{
  "compilerOptions": {
    // "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "~shared/*": [
        "./shared/*"
      ]
    },
    "rootDirs": [
      "./src",
      "./shared",
      // "./backend"
    ],
    // "declaration": true,
    // "outDir": "./dist",
    "baseUrl": "./"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/(general)/user/[profile]/[postId]"],
  "exclude": ["node_modules", "backend"]
}
